<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Assign_Task"
    android:padding="25dp"
    android:background="@drawable/assign_tsk">


    <EditText
        android:id="@+id/usrname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Specify username of employee"
        android:inputType="text"
        android:layout_marginVertical="10dp"
        />

    <ImageButton
        android:layout_width="50dp"
        android:id="@+id/vw_user"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/usrname"
        android:layout_alignBottom="@+id/usrname"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/about_icon" />

    <EditText
        android:id="@+id/task_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Task Description"
        android:inputType="text"
        android:layout_marginVertical="10dp"
        android:layout_below="@+id/usrname"
        />


    <EditText
        android:id="@+id/task_due"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/task_name"
        android:layout_marginTop="8dp"
        android:hint="Select Due Date"
        android:inputType="text"
        android:layout_marginVertical="10dp"
        />

    <!-- Calendar -->

    <ImageButton
        android:id="@+id/calendarButton"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_below="@id/task_name"
        android:layout_alignEnd="@+id/task_name"
        android:layout_alignBottom="@+id/task_due"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="9dp"
        android:src="@drawable/calendar_icon" />

    <Button
        android:id="@+id/vw_tsk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendarButton"
        android:layout_marginTop="16dp"
        android:text="View Assigned Task"
        android:background="@drawable/round_border"
        android:layout_marginVertical="10dp" />

    <!-- Insert Button -->
    <Button
        android:id="@+id/ins_tsk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vw_tsk"
        android:layout_marginTop="16dp"
        android:text="Add New Task"
        android:background="@drawable/round_border"
        android:layout_marginVertical="10dp"/>

    <!-- Update Button -->
    <Button
        android:id="@+id/updt_tsk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ins_tsk"
        android:layout_marginTop="8dp"
        android:text="Update Assigned task"
        android:background="@drawable/round_border"
        android:layout_marginVertical="10dp"/>

    <!-- Delete Button -->
    <Button
        android:id="@+id/del_tsk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/updt_tsk"
        android:layout_marginTop="8dp"
        android:text="Delete Task"
        android:background="@drawable/round_border"
        android:layout_marginVertical="10dp"/>

</RelativeLayout>