<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contactFragment"
        android:orientation="vertical"
        android:padding="16dp"
    android:background="@drawable/ligth_green">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Information"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        android:layout_marginVertical="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: prathamesh@gmail.com"
        android:layout_marginBottom="8dp"
        android:layout_marginVertical="10dp"
        android:textSize="19dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: +91 8795641230"
        android:layout_marginBottom="16dp"
        android:layout_marginVertical="10dp"
        android:textSize="19dp"
        android:textStyle="bold"/>

    <!-- Contact Form -->
    <!-- Include UI elements for a contact form (EditText, Spinner, Button, etc.) -->

    <!-- Office Address -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Address: 123 Main St, Mumbai,India"
        android:layout_marginBottom="16dp"
        android:layout_marginVertical="10dp"
        android:textSize="19dp"
        android:textStyle="bold"/>

    <!-- Social Media Links -->
    <!-- Include clickable links to social media profiles -->

    <!-- Operating Hours -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you want to give any feedback or rating please click on the below Feedback button."
        android:layout_marginBottom="16dp"
        android:textSize="19dp"
        android:textStyle="bold"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FeedBack"
        android:layout_marginBottom="16dp"
        android:id="@+id/feed"
        android:layout_marginVertical="10dp"
        android:textStyle="bold"
        android:background="@drawable/btn_round"
        />
    </LinearLayout>
