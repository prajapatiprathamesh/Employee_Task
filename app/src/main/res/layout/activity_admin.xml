<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin_Activity"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/admin_final">

    <ImageView
        android:layout_width="111dp"
        android:layout_height="73dp"
        android:layout_gravity="center"
        android:src="@drawable/adm_icn"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text= "Admin Panel"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="35dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"

        />

    <Button
        android:id="@+id/manag_emp"
        android:layout_width="330dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Manage User"
        android:background="@drawable/round_border"
        android:textColor="#ffffff"
        android:layout_marginTop="8dp"
        android:layout_marginVertical="15dp"
        />

    <Button
        android:id="@+id/task"
        android:layout_width="330dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Assign Task"
        android:textColor="#ffffff"
        android:layout_marginTop="8dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="@color/black"
        android:background="@drawable/round_border"
        />

    <Button
        android:id="@+id/ViewTask"
        android:layout_width="330dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="View Submit task Details"
        android:textColor="#ffffff"
        android:layout_marginTop="8dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="@color/black"
        android:background="@drawable/round_border"/>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="330dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Update to Employee"
        android:textColor="#ffffff"
        android:layout_marginTop="8dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/round_border"/>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="330dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:background="@drawable/round_border"
        android:textColor="#ffffff"
        android:layout_marginTop="8dp"
        android:layout_marginVertical="10dp"
        />



</LinearLayout>