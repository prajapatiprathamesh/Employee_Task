<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Complete_Task_Activity"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/complete_tsk">
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Please fill the below fields to submit the task progress."
        android:textSize="17dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="13dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/usrname"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:hint="Enter Your Username"
        android:layout_marginVertical="15dp"
        android:layout_gravity="center"
        android:textSize="17dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/tsk_name"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:hint="Enter Task_Assigned"
        android:layout_marginVertical="20dp"
        android:layout_gravity="center"
        android:textSize="17dp"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="320dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Enter the task Progress below in bar"
        android:layout_marginVertical="20dp"
        android:textSize="17dp"
        android:textColor="@color/black"/>

    <SeekBar
        android:id="@+id/progressSeekBar"
        android:layout_width="320dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:textSize="17dp"
        android:textColor="@color/black"  />
    <TextView
        android:id="@+id/progressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="0%"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
       />


    <Button
        android:id="@+id/assign_task"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="View Assigned Task"
        android:layout_marginTop="16dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/round_border"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/del_task"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Delete Task Progress"
        android:layout_marginTop="16dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/round_border"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/Submit_task"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Submit Progress"
        android:layout_marginTop="16dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/round_border"
        android:layout_gravity="center"
        />


</LinearLayout>